FROM dockcross/windows-static-x64:latest

ENV DEFAULT_DOCKCROSS_IMAGE dockcross-windows-static-x64-perimeter

RUN  apt-get install software-properties-common lsb-release -y
RUN apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 86B72ED9
RUN add-apt-repository "deb [arch=amd64] http://pkg.mxe.cc/repos/apt `lsb_release -sc` main"
RUN apt-get update

RUN apt-get install -y \
 mxe-x86-64-w64-mingw32.static-vorbis \
 mxe-x86-64-w64-mingw32.static-boost \
 mxe-x86-64-w64-mingw32.static-sdl2
